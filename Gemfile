source :rubygems

gem "rack"

group :development, :test do
  gem "guard"
  gem "guard-livereload"
  gem "guard-rspec"
  gem "growl"
end

group :test do
  gem "rspec-core"
  gem "rspec-mocks"
  gem "rspec-expectations"
  gem "capybara", :git => 'git://github.com/jnicklas/capybara.git'
  gem "capybara-webkit"
  
  gem "syntax"
end
